<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Bank</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Simplilearn</property>


        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <mapping class="com.simplilearn.model.Customer"/>
        <mapping class="com.simplilearn.model.Account"/>
        <mapping class="com.simplilearn.model.SavingsAccount"/>
        <mapping class="com.simplilearn.model.CheckingAccount"/>
        <mapping class="com.simplilearn.model.Transaction"/>
    </session-factory>
</hibernate-configuration>